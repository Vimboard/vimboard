<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.vimboard.mapper.UserMapper">

    <update id="alter">
        UPDATE vmb.mod
        SET password = #{password},
            type = #{type},
            boards = #{boards}
        WHERE username = #{username}
    </update>

    <insert id="create">
        INSERT INTO vmb.mod(username, password)
        VALUES (#{username}, #{password})
    </insert>

    <delete id="drop">
        DELETE FROM vmb.mod WHERE username = #{username}
    </delete>

    <select id="findByName" resultType="com.github.vimboard.domain.User"><!--resultMap="userResult"-->
        SELECT id, username, password FROM vmb.mod WHERE username = #{username} LIMIT 1
    </select>

    <select id="list" resultType="com.github.vimboard.domain.User">
        SELECT id, username, password FROM vmb.mod
    </select>

</mapper>
